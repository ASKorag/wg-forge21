include /button/button

mixin item(item)
  - var {type, href, price, name, country, tankType, image, size, isWish} = item
  div(class=[attributes.class, 'item', item.size === 'big' ? 'item--big' : ''])
    a(href=href).item__link._link
      img(class=['item__img'
        , `item__img--${type}`, size ===
        'big' ? 'item__img--big' : '', '_img'] width='50%' height='50%' src=require(`@images/${type}/${image}.png`) alt=image)
    .item__content
      h2.item__descr
        if (type === 'vehicle')
          span(class=['item__country', `item__country--${country}`])
          span(class=['item__vehicle-type', `item__vehicle-type--${tankType}`])
        span.item__name= ` ${name}`
      p.item__price $ #{price}
      +button('Purchase').item__purchase
    button(class=['item__wish', isWish ? 'item__wish--added' : ''])
